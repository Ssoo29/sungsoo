CREATE TABLE TB_CLASS_TYPE1
( SNUM NUMBER(10),
  SNAME VARCHAR2(20)
);

 COMMENT ON COLUMN SNUM IS '부서명';
 COMMENT ON COLUMN PART_LIST.JOB_TITLE IS '직급명';
